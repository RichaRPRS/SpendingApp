<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/chocolate" />

            <padding
                android:bottom="1dp"
                android:left="5dp"
                android:right="5dp"
                android:top="1dp" />

            <corners
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="5px"
                android:color="@color/chocolate" />

            <padding
                android:bottom="1dp"
                android:left="5dp"
                android:right="5dp"
                android:top="1dp" />

            <corners
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp" />
        </shape>
    </item>
</selector>